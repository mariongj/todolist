<h1>To do list</h1>
<% @tasks.each do |task| %>
  <h1><%= link_to task.title, task_path(task) %></h1>
  <p>Description: <%= task.description %></p>
  <p>Before: <%= task.end_date %></p>
  <p><%= link_to "edit", edit_task_path(task) %></p>
  <p><%= link_to "delete", task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
  </p>
<% end %>

<br>
<p><%= link_to "Create a new task", new_task_path %></p>
